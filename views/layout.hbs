  <div class="container">

      <main>
      
          <header>
            <div id="header">
              <h1 class="hidden">Adam Goarley</h1>
              <div id="logoContainer">
                  <img src="../images/logo(color).svg" alt="" height="100%" width="100%" id="logo">
              </div>
              
              <img src="../images/me_mobile.jpg" alt="" height="auto" width="100%" class="me_mobile">
