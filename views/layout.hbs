                    <div id="skillSVG">
                        <img src="../images/arrow.svg" alt="" height="100%" width="100%" class="arrow2">
                    </div>

                  </div>
  
              </div>
  
          </section>

          <section id="infoSquares">
            <h2 class="portfolio_text">Some Of My Work</h2>

    {{#each data}}
        <div class="content">
            <div class="square1Text">
                <h2>{{Headings}}</h2>
                <div class="line4"></div>
                <p>{{Copy}}</p>
            </div>
    
            <div class="square1Image">      
                <img src="images/{{Images}}" height="100%" width="100%"> 
            </div>
        </div>
    {{/each}}
    
    
    
      <section id="video">
        <div class="videoDemo"> 
            <iframe width="100%" height="100%" src="https://www.youtube.com/embed/s3R_nEDX97A" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
      </section>
    

      <section id="contact">
          <div class="contactSection">
              <img src="../images/drone.jpg" alt="" class="contactPhoto" height="1000px" width="100%">
    <div class="form">
        <form action="contact.php" method="post">
        <h2>Let's Chat</h2>

        {{!-- <label id="name" for="name-field">First and Last Name</label> --}}
        <input id="name-field" name="name" type="text" placeholder="First and Last Name">

        {{!-- <label id="email" for="email-field">Email</label> --}}
        <input id="email-field" name="email" type="email" placeholder="Email">

        {{!-- <label id="subject" for="subject-field">Subject</label> --}}
        <input id="subject-field" name="subject" type="text" placeholder="Subject">

        {{!-- <label id="message" for="message-field">Message</label> --}}
        <textarea id="message-field" name="message" placeholder="Message"></textarea>

        <button type="submit">Send</button>
    </div>
